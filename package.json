{
    "name"            : "careerf5",
    "description"     : "Refresh your career in the IT industry!",
    "version"         : "1.0.4",
    "author"          : {
        "name" : "Alan Tai"
    },
    "repository"      : {
        "type" : "git",
        "url"  : "git+https://github.com/ayltai/Career-F5.git"
    },
    "bugs"            : {
        "url" : "https://github.com/ayltai/Career-F5/issues"
    },
    "keywords"        : [
        "bootcamp",
        "career",
        "coding",
        "course",
        "developer",
        "development",
        "engineering",
        "learning",
        "programmer",
        "programming",
        "tech",
        "technology",
        "technologies"
    ],
    "homepage"        : "https://careerf5.tech",
    "scripts"         : {
        "eject"   : "react-scripts eject",
        "clean"   : "pnpm dlx rimraf --glob **/node_modules package-lock.json",
        "reset"   : "pnpm run clean && pnpm i && pnpm audit -P",
        "build"   : "cross-env SKIP_PREFLIGHT_CHECK=true craco build",
        "pretest" : "eslint --ext .js,.jsx,.ts,.tsx src",
        "test"    : "jest --maxWorkers=100%",
        "test:ci" : "jest --runInBand",
        "start"   : "cross-env BROWSER=none SKIP_PREFLIGHT_CHECK=true craco start",
        "serve"   : "pnpm dlx serve -s build",
        "update"  : "pnpm dlx npm-check-updates"
    },
    "dependencies"    : {
        "@emotion/react"            : "^11.10.6",
        "@emotion/styled"           : "^11.10.6",
        "@fontsource/kreon"         : "^4.5.12",
        "@fontsource/lobster-two"   : "^5.0.4",
        "@fontsource/noto-sans-tc"  : "^4.5.12",
        "@fontsource/noto-serif-tc" : "^4.5.12",
        "@fontsource/sansita"       : "^4.5.9",
        "@mui/icons-material"       : "^5.11.16",
        "@mui/material"             : "^5.12.2",
        "@reduxjs/toolkit"          : "^1.9.5",
        "@sentry/react"             : "^7.50.0",
        "@ui-schema/ds-material"    : "^0.4.1",
        "@ui-schema/ui-schema"      : "^0.4.5",
        "i18next"                   : "^22.4.15",
        "immutable"                 : "^4.3.0",
        "mixpanel-browser"          : "^2.46.0",
        "react"                     : "^18.2.0",
        "react-dom"                 : "^18.2.0",
        "react-i18next"             : "^12.2.2",
        "react-redux"               : "^8.0.5",
        "redux-persist"             : "^6.0.0",
        "usehooks-ts"               : "^2.9.1"
    },
    "devDependencies" : {
        "@craco/craco"                  : "^7.1.0",
        "@sentry/cli"                   : "^2.17.4",
        "@swc/core"                     : "^1.3.55",
        "@swc/helpers"                  : "^0.5.1",
        "@swc/jest"                     : "^0.2.26",
        "@testing-library/jest-dom"     : "^5.16.5",
        "@testing-library/react"        : "^14.0.0",
        "@tsconfig/create-react-app"    : "^1.0.3",
        "@types/css-mediaquery"         : "^0.1.1",
        "@types/gtag.js"                : "^0.0.12",
        "@types/jest"                   : "^29.5.1",
        "@types/mixpanel-browser"       : "^2.38.1",
        "@types/node"                   : "^18.16.1",
        "@types/react"                  : "^18.2.0",
        "@types/react-dom"              : "^18.2.1",
        "@types/react-router-dom"       : "^5.3.3",
        "@types/react-test-renderer"    : "^18.0.0",
        "craco-swc"                     : "^0.5.1",
        "cross-env"                     : "^7.0.3",
        "css-mediaquery"                : "^0.1.2",
        "eslint"                        : "^8.39.0",
        "eslint-plugin-import"          : "^2.27.5",
        "eslint-plugin-jest"            : "^27.2.1",
        "eslint-plugin-jest-dom"        : "^4.0.3",
        "eslint-plugin-prefer-arrow"    : "^1.2.3",
        "eslint-plugin-react"           : "^7.32.2",
        "eslint-plugin-react-hooks"     : "^4.6.0",
        "eslint-plugin-testing-library" : "^5.10.3",
        "eslint-plugin-unicorn"         : "^46.0.0",
        "jest"                          : "^29.5.0",
        "jest-environment-jsdom"        : "^29.5.0",
        "jest-fetch-mock"               : "^3.0.3",
        "jest-transform-stub"           : "^2.0.0",
        "react-scripts"                 : "^5.0.1",
        "react-test-renderer"           : "^18.2.0",
        "typescript"                    : "^5.0.4"
    },
    "resolutions"     : {
        "@swc/helpers" : "^0.5.1",
        "yaml"         : "^2.2.2"
    },
    "jest"            : {
        "collectCoverage"        : true,
        "collectCoverageFrom"    : [
            "./src/**/*.{js,jsx,ts,tsx}"
        ],
        "moduleNameMapper"       : {
            ".+\\.(css|less|sass|scss|png|jpg|gif|webp|svg|ttf|woff|woff2)$" : "jest-transform-stub"
        },
        "testEnvironment"        : "jest-environment-jsdom",
        "testPathIgnorePatterns" : [
            "<rootDir>/src/utils/test.tsx"
        ],
        "transform"              : {
            "^.+\\.(t|j)sx?$" : "@swc/jest"
        },
        "setupFilesAfterEnv"     : [
            "<rootDir>/src/setupTests.ts"
        ]
    },
    "engines"         : {
        "node" : ">=18",
        "pnpm" : ">=8"
    },
    "browserslist"    : {
        "production"  : [
            ">0.5%",
            "not dead",
            "not Explorer <= 11"
        ],
        "development" : [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
